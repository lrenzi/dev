/* radios e checkboxes */
/**/
.radio,
.checkbox {
    margin-bottom: 4px;
    /*padding-left: 27px;*/
    padding-left: 10px;
    /*font-size: 15px;*/
    line-height: 27px;
    /*color: #404040;*/
    cursor: pointer;
}
/*
.radio input,
.checkbox input {
    position: absolute;
    left: -9999px;
}*/

.radio i,
.checkbox i {
    position: absolute;
    top: 5px;
    left: 0;
    display: block;
    width: 13px;
    height: 13px;
    outline: none;
    border-width: 2px;
    border-style: solid;
    background: #fff;
}

.radio input + i:after,
.checkbox input + i:after {
    position: absolute;
    opacity: 0;
    -ms-transition: opacity 0.1s;
    -moz-transition: opacity 0.1s;
    -webkit-transition: opacity 0.1s;
}
